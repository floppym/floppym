<project name="slf4j-api" default="jar">
	<target name="compile">
		<mkdir dir="build"/>
		<javac srcdir="src/main/java" destdir="build" encoding="iso-8859-1"
			classpath="${gentoo.classpath}"/>
	</target>

	<target name="jar" depends="compile">
		<jar destfile="slf4j-api.jar" basedir="build"/>
	</target>

	<target name="javadoc" depends="compile">
		<mkdir dir="docs"/>
		<javadoc sourcepath="src/main/java" destdir="docs" encoding="iso-8859-1"
			classpath="${gentoo.classpath}"/>
	</target>

</project>
